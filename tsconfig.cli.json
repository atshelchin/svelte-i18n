{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"module": "ESNext",
		"target": "es2020",
		"outDir": "./dist",
		"rootDir": "./src",
		"declaration": false,
		"removeComments": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true
	},
	"include": [
		"src/lib/cli/**/*",
		"src/lib/domain/models/types.ts",
		"src/lib/domain/services/utils.ts"
	],
	"exclude": ["node_modules", "dist"]
}
