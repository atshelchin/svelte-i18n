{
	"name": "@shelchin/svelte-i18n",
	"version": "0.0.21",
	"description": "The last Svelte i18n library you'll ever need. Type-safe, AI-powered, zero-config.",
	"author": "Shelchin",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/atshelchin/svelte-i18n.git"
	},
	"homepage": "https://github.com/atshelchin/svelte-i18n#readme",
	"bugs": {
		"url": "https://github.com/atshelchin/svelte-i18n/issues"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run prepack",
		"build:cli": "tsc src/lib/cli/*.ts src/lib/domain/models/types.ts src/lib/domain/services/utils.ts --outDir dist --module esnext --target es2020 --esModuleInterop --skipLibCheck",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package && npm run build:cli && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"check:types": "tsc --noEmit scripts/check-type-safety.ts",
		"i18n:types": "node --loader ts-node/esm src/lib/cli/generate-types.ts",
		"i18n:validate": "node --loader ts-node/esm src/lib/cli/generate-types.ts",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test",
		"cli:extract": "node dist/cli/extract.js",
		"cli:validate": "node dist/cli/validate.js",
		"cli:generate-types": "node dist/cli/generate-types.js",
		"svelte-i18n": "node dist/cli/index.js",
		"i18n:check": "svelte-i18n validate ./src/translations/locales",
		"i18n:check:lib": "svelte-i18n validate ./src/lib/translations/locales",
		"i18n:types:lib": "svelte-i18n generate-types --lib"
	},
	"bin": {
		"svelte-i18n": "./dist/cli/index.js"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*",
		"README.md",
		"README-zh.md",
		"LICENSE"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./cli": {
			"types": "./dist/cli/index.d.ts",
			"default": "./dist/cli/index.js"
		},
		"./i18n-types": {
			"types": "./dist/types/lib-i18n-generated.d.ts",
			"default": "./dist/i18n-meta.js"
		}
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@playwright/test": "^1.49.1",
		"@sveltejs/adapter-node": "^5.2.14",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@tailwindcss/forms": "^0.5.9",
		"@tailwindcss/typography": "^0.5.15",
		"@tailwindcss/vite": "^4.0.0",
		"@testing-library/svelte": "^5.2.8",
		"@types/node": "^24.2.1",
		"@vitest/browser": "^3.2.3",
		"chalk": "^5.5.0",
		"dexie": "^4.0.11",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"playwright": "^1.53.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"publint": "^0.3.2",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^7.0.4",
		"vite-plugin-devtools-json": "^0.2.0",
		"vitest": "^3.2.3",
		"vitest-browser-svelte": "^0.1.0"
	},
	"keywords": [
		"svelte",
		"svelte5",
		"i18n",
		"internationalization",
		"translation",
		"localization",
		"l10n",
		"typescript",
		"type-safe",
		"ai-powered"
	],
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	}
}
